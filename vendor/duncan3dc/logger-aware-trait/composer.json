{
    "name": "duncan3dc/logger-aware-trait",
    "type": "library",
    "description": "A PSR-3 trait allowing any class to easily add logger support",
    "keywords": ["phpfig", "psr-3", "logging", "logger"],
    "homepage": "https://github.com/duncan3dc/logger-aware-trait",
    "license": "Apache-2.0",
    "authors": [{
        "name": "Craig Duncan",
        "email": "git@duncanc.co.uk",
        "homepage": "https://github.com/duncan3dc",
        "role": "Developer"
    }],
    "require": {
        "psr/log": "^1.0",
        "php": "^7.0"
    },
    "require-dev": {
        "duncan3dc/object-intruder": "^0.1.0",
        "mockery/mockery": "^0.9.7",
        "phpunit/phpunit": "^6.0",
        "satooshi/php-coveralls": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "duncan3dc\\Log\\": "src/",
            "duncan3dc\\LogTests\\": "tests/"
        }
    }
